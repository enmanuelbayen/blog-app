<%= link_to user_path(user) do %>
  <container class="user-item grid">
    <img class="user-img" src="<%=user.photo%>" alt"<%=user.name%>" />
    <div class="user-box flex" >
      <h2 class="user-name"><%=user.name%></h2>
      <p class="user-post-count">Numbers of posts: <%=user.posts_counter%></p>
    </div>
  </container>
<% end %>