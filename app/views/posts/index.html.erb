<section class="post-comments flex">
  <%= render partial: 'shared/user_banner', locals: { user: @user } %>
  
  <ul class="post-list flex">
  <% @posts.each do |post| %>
    <%= link_to user_post_url(id: post.id) do %>
    <li class="post-item">
      <div class="post-card">
        <h3><%= post.title %></h3> 
        <p><%= truncate(post.text, length: 200, omission: '...') %></p>
        <p class="post-counter">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
      </div>
      <% end %>
      <ul class="comment-list flex">
        <% post.recent_comments.each do |comment| %>
        <li>
          <p><%= comment.author.name %>: <%= comment.text %></p>
        </li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
  
  <div class="bttn-box">
    <button class="expand-bttn">
      <%= link_to 'Pagination', user_path(@user) %>
    </button>
  </div>

  <div class="bttn-box">
    <a class="expand-bttn" href="<%= new_user_post_path(@user) %>">Add post</a>
  </div>
</section>

