<h1 class="create-title">Create a Post</h1>

<%= form_with model: @post, url: new_user_post_path, method: :post do |f| %>
    <div class="form-input flex">
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.text_area :text, rows: 5, cols: 40 %>
        </div>
        <%= f.submit "Create Post", class: "form-bttn" %>
    </div>
<% end %>